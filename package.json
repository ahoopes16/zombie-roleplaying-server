{
  "name": "zombie-roleplaying-server",
  "version": "1.0.0",
  "description": "A server to do all the work behind my zombie roleplaying game",
  "main": "index.js",
  "repository": "git@github.com:ahoopes16/zombie-roleplaying-server.git",
  "author": "Alex Hoopes <kevin.alex.hoopes@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "nodemon --watch src/**/* -e ts --exec ts-node ./src/server.ts",
    "lint": "eslint ./src/**/*.ts",
    "lint-fix": "yarn lint --fix",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint",
      "pre-push": "yarn test"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testTimeout": 1000
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "koa": "^2.11.0",
    "koa-body": "^4.1.1",
    "koa-combine-routers": "^4.0.2",
    "koa-logger-winston": "^0.0.2",
    "koa-router": "^8.0.8",
    "mongoose": "^5.9.5",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/jest": "^25.1.4",
    "@types/koa": "^2.11.2",
    "@types/koa-logger-winston": "^0.0.2",
    "@types/koa-router": "^7.4.0",
    "@types/mongoose": "^5.7.7",
    "@typescript-eslint/eslint-plugin": "^2.24.0",
    "@typescript-eslint/parser": "^2.24.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1",
    "ts-jest": "^25.2.1",
    "ts-node": "^8.7.0",
    "typescript": "^3.8.3"
  }
}
